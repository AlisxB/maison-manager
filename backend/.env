PROJECT_NAME="Maison Manager API"
API_V1_STR="/api/v1"

# Database (Localhost connection for running outside docker if needed)
# BUT inside docker-compose, 'api' service uses the internal URL set in yaml
# This file is loaded by pydantic if running `uvicorn` manually on host logic
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password123
POSTGRES_DB=maison_manager
DATABASE_URL=postgresql+asyncpg://postgres:password123@localhost:5432/maison_manager

# Security
SECRET_KEY=change_this_secret_in_prod
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
APP_ENCRYPTION_KEY=super_secure_key_for_pgcrypto
